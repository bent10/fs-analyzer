{
  "name": "glob-reader",
  "description": "Iterative file and text processing",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/glob-reader.git",
  "license": "MIT",
  "keywords": [
    "expand",
    "files",
    "filesystem",
    "filter",
    "find",
    "fnmatch",
    "fs",
    "glob",
    "globbing",
    "globs",
    "match",
    "matcher",
    "minimatch",
    "multi",
    "multiple",
    "paths",
    "pattern",
    "patterns",
    "traverse",
    "util",
    "utility",
    "wildcard",
    "wildcards",
    "promise",
    "generator"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run build && npm run watch",
    "watch": "chokidar \"src/*.ts\" -c \"npm run build\"",
    "lint": "tsc --noEmit && eslint \"./src\" --ext \".ts\" --cache --cache-location \"node_modules/.cache/.eslintcache\"",
    "build": "swc \"./src\" -d \"dist\" && tsc -d --emitDeclarationOnly",
    "test": "node --experimental-vm-modules --no-warnings ./node_modules/jest/bin/jest.js --verbose",
    "coverage": "npm test -- --coverage"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "vfile": "^5.3.6",
    "vfile-is": "^2.0.0",
    "vfile-matter": "^4.0.0",
    "vfile-rename": "^2.0.1",
    "vfile-reporter": "^7.0.4"
  },
  "devDependencies": {
    "doogu": "^2.4.48",
    "source-map-js": "^1.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "./node_modules/doogu/config/eslint.json"
  },
  "prettier": "doogu/config/prettier.json",
  "jest": {
    "transform": {
      "^.*.ts$": [
        "@swc/jest"
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^./utils.js$": "<rootDir>/test/utils.ts"
    },
    "watchPathIgnorePatterns": [
      "<rootDir>/test/fixtures"
    ],
    "clearMocks": true,
    "coverageDirectory": "coverage"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "changelog.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "changelog.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
